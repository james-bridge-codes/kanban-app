// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// USERS
model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  password String
  boards   Board[]
}

// BOARDS
model Board {
  id        Int      @id @default(autoincrement())
  title     String
  isDeleted Boolean
  columns   Column[]
  User      User?    @relation(fields: [userId], references: [id])
  userId    Int?
}

// Columns
model Column {
  id        Int      @id @default(autoincrement())
  title     String
  isDeleted Boolean
  tickets   Ticket[]
  index     Int
  Board     Board?   @relation(fields: [boardId], references: [id])
  boardId   Int?
}

// TICKETS
model Ticket {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  isDeleted   Boolean
  tasks       Task[]
  Column      Column? @relation(fields: [columnId], references: [id])
  columnId    Int?
}

// TASKS
model Task {
  id        Int     @id @default(autoincrement())
  title     String
  completed Boolean
  isDeleted Boolean
  Ticket    Ticket? @relation(fields: [ticketId], references: [id])
  ticketId  Int?
}
